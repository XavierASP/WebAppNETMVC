@model WebAppNETMVC.DTO.CustomerBOResponse
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="row">
    <div class="col-lg-1 col-md-1"></div>
    <div class="col-lg-10 col-md-10">
        <div class="panel-info panel">
            <div class="panel-heading">
                <div class="panel-title"><h2>Are you sure you want to delete this?</h2></div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {

                    @Html.HiddenFor(model => model.customer_id)
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.first_name, new { @class = "form-control",disabled ="disabled" , @placeholder = "First Name" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.last_name, new { @class = "form-control",disabled = "disabled", @placeholder = "Last Name" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.phone, new { @class = "form-control", disabled = "disabled", @placeholder = "Phone" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.email, new { @class = "form-control", disabled = "disabled", @placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.city, new { @class = "form-control", disabled = "disabled", @placeholder = "City" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.state, new { @class = "form-control", disabled = "disabled", @placeholder = "State" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.street, new { @class = "form-control", disabled = "disabled", @placeholder = "Street" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.zip_code, new { @class = "form-control", disabled = "disabled", @placeholder = "ZipCode" })
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger" value="Delete" /> @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-dark"})
                    </div>
                }
               
            </div>
        </div>

    </div>
    <div class="col-lg-1 col-md-1"></div>
</div>